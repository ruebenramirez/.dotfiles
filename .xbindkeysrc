#################################
# reboot
#################################
"sudo reboot"
    m:0x4 + c:124
    Control + XF86PowerOff

#################################
# disable power button
#################################
""
    c:124
    PowerOff

#################################
# screenshot capture
#################################
# mac mission control button
"sh ~/bin/screenshot"
    m:0x0 + c:212
    XF86LaunchB
# non-mac printscreen button
"sh ~/bin/screenshot"
    m:0x0 + c:107
    Print

#################################
# lock screen
##################################

"lock"
    m:0xd + c:65
    Control+Shift+Alt + space


#################################
# rescreen
##################################
"rescreen"
    m:0x8 + c:128
    Alt + XF86LaunchA

#################################
# insert datestamp + day
# e.g. 2021-08-12 Thursday
##################################
"sleep 0.2; xdotool type --clearmodifiers $(date +%Y-%m-%d); xdotool key 0xff80; xdotool type --clearmodifiers $(date +%A)"
    m:0x40 + c:33
    Mod4 + p

"sleep 0.2; xdotool type --clearmodifiers $(date +%Y-%m-%d); xdotool key 0xff80; xdotool type --clearmodifiers $(date +%A)"
    m:0x4 + c:69
    Control + F3

#################################
# rekey based on ctrl + display toggle key
# (XPS 13: f8 + fn mod)
##################################
"re"
    m:0x44 + c:33
    Control+Mod4 + p
