#################################
# Volume Up
#################################
"sh ~/bin/volume-up.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:96
    Control + F12

"sh ~/bin/volume-up.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:123
    XF86AudioRaseVolume

