#################################
# Toggle touchpad on/off
#################################
"~/bin/trackpad-toggle.sh"
    m:0x4 + c:66
    Control + Escape

#################################
# Screen Brightness -
#################################
"~/bin/change-screen-brightness -- -5"
    m:0x0 + c:232
    XF86MonBrightnessDown
"~/bin/change-screen-brightness -- -5"
    m:0x4 + c:71
    Control + F5
"~/bin/change-screen-brightness -- -1"
    m:0x5 + c:232
    Control+Shift + XF86MonBrightnessDown
"~/bin/change-screen-brightness -- -1"
    m:0x1 + c:232
    Shift + XF86MonBrightnessDown
"~/bin/change-screen-brightness -- -1"
    m:0x4 + c:232
    Control + XF86MonBrightnessDown



#################################
# Screen Brightness +
#################################
"~/bin/change-screen-brightness -- 5"
    m:0x0 + c:233
    XF86MonBrightnessUp
"~/bin/change-screen-brightness -- 5"
    m:0x4 + c:72
    Control + F6
"~/bin/change-screen-brightness -- 1"
    m:0x5 + c:233
    Control+Shift + XF86MonBrightnessUp
"~/bin/change-screen-brightness -- 1"
    m:0x1 + c:233
    Shift + XF86MonBrightnessUp
"~/bin/change-screen-brightness -- 1"
    m:0x4 + c:233
    Control + XF86MonBrightnessUp

#################################
# spotify commands via media keys
#################################
# play/pause
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
    m:0x0 + c:172
    XF86AudioPlay

# previous
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
    m:0x0 + c:173
    XF86AudioPrev

# forward
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
    m:0x0 + c:171
    XF86AudioNext



#################################
# Volume Toggle Mute
#################################
"sh ~/bin/volume-mute-toggle.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:76
    Control + F10

"sh ~/bin/volume-mute-toggle.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:121
    XF86AudioMute

#################################
# Volume Down
#################################
"sh ~/bin/volume-down.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:95
    Control + F11

"sh ~/bin/volume-down.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:122
    XF86AudioLowerVolume

