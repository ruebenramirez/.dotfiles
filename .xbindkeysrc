################################
# Move mouse to left screen
################################
"move-mouse-left.sh; reset-mouse-top-left-of-screen.sh"
    m:0xd + c:113
    Control+Shift+Alt + Left

#################################
# Move mouse to right screen
#################################
"move-mouse-right.sh; reset-mouse-top-left-of-screen.sh"
    m:0xd + c:114
    Control+Shift+Alt + Right


#################################
# Toggle touchpad
#################################
"~/bin/trackpad-toggle.sh"
    m:0x4 + c:66
    Control + Escape

#################################
# Screen Brightness -
#################################
# macbook pro
"~/bin/decrease-screen-brightness"
    m:0x0 + c:232
    XF86MonBrightnessDown

# asus laptop
"~/bin/decrease-screen-brightness"
    m:0x4 + c:71
    Control + F5

#################################
# Screen Brightness +
#################################
# macbook pro
"~/bin/increase-screen-brightness"
    m:0x0 + c:233
    XF86MonBrightnessUp
# asus laptop
"~/bin/increase-screen-brightness"
    m:0x4 + c:72
    Control + F6


#################################
# spotify commands via media keys
#################################
# play/pause
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
    m:0x0 + c:172
    XF86AudioPlay

# previous
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
    m:0x0 + c:173
    XF86AudioPrev

# forward
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
    m:0x0 + c:171
    XF86AudioNext



#################################
# Volume Toggle Mute
#################################
"sh ~/bin/volume-mute-toggle.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:76
    Control + F10

"sh ~/bin/volume-mute-toggle.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:121
    XF86AudioMute

#################################
# Volume Down
#################################
"sh ~/bin/volume-down.sh; sh ~/.xsetroot.sh"
    m:0x4 + c:95
    Control + F11

"sh ~/bin/volume-down.sh; sh ~/.xsetroot.sh"
    m:0x0 + c:122
    XF86AudioLowerVolume

