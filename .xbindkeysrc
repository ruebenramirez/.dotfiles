#################################
# reboot
#################################
"sudo reboot"
    m:0x4 + c:124
    Control + XF86PowerOff

#################################
# disable power button
#################################
""
    c:124
    PowerOff

#################################
# screenshot capture
#################################
# mac mission control button
"sh ~/bin/screenshot"
    m:0x0 + c:212
    XF86LaunchB
# non-mac printscreen button
"sh ~/bin/screenshot"
    m:0x0 + c:107
        Print

#################################
# lock screen
##################################

# macbook pro
"lock"
    m:0xd + c:50
    Control+Shift+Alt + Shift_L


# non-mac laptops
"lock"
    m:0xd + c:46
    Control+Shift+Alt + l

#################################
# rescreen
##################################
"rescreen"
    m:0x8 + c:128
    Alt + XF86LaunchA
