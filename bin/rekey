#!/usr/bin/env bash

set +e -x

echo "STARTING keyboard setup"

echo "configuring keyboard shortcuts"
killall xbindkeys || true
xbindkeys -f ~/.xbindkeysrc

echo "faster key repeat"
xset r rate 220 60

# capslock key = escape
# escape key = capslock
setxkbmap -option caps:swapescape

setup-mac.sh

echo "FINISHED keyboard setup"
